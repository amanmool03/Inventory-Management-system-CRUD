<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Latest Transaction</h4>
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 20px;">
                                    <div class="form-check font-size-16 align-middle">
                                        <input class="form-check-input" type="checkbox" id="transactionCheck01">
                                        <label class="form-check-label" for="transactionCheck01"></label>
                                    </div>
                                </th>
                                
                                <th class="align-middle">Product Name</th>
                                <th class="align-middle">Product Quantity</th>

                                <th class="align-middle">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check font-size-16">
                                            <input class="form-check-input" type="checkbox" id="transactionCheck02">
                                            <label class="form-check-label" for="transactionCheck02"></label>
                                        </div>
                                    </td>

                                    <td> @Html.DisplayFor(modelItem => item.Product_name)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product_qnty)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "UpdateProduct", "Product", new { id = item.id }, new { @class = "btn btn-primary" }) |
                                        @Html.ActionLink("Details", "ProductDetail", "Product", new { id = item.id }, new { @class = "btn btn-success" }) |
                                        @Html.ActionLink("Delete", "DeleteProduct", "Product", new { id = item.id }, new { @class = "btn btn-danger" })
                                    </td>

                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
                <!-- end table-responsive -->
            </div>
        </div>
    </div>
</div>
